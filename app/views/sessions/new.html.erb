<% if @user_form.errors.present? && @user_form.errors.any? %>
  <div class="error_message_box">
    <ul>
      <% @user_form.errors.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-10">
      <h1 class='py-4 text-center'><%= I18n.t("title.session_new") %></h1>
      <div class='center_form'>
        <%= form_with(model: @user_form,scope: :session, url: sessions_path, local: true) do |form| %>
          <div class="form-group">
            <%= form.label :name_or_email %> 
            <%= form.text_field :name_or_email, placeholder: I18n.t("message.please_input_name_or_email"),class:'form-control'  %>
          </div>
          <%= form.fields_for :user , @user_form.user  do |user_fields| %>
            <div class="form-group">
              <%= user_fields.label :password, I18n.t("model.password")  %>
              <%= user_fields.password_field :password ,class:'form-control'%>
            </div>
          <% end %>
          <div class="form-group">
            <%= form.submit I18n.t("button.login") ,class:'btn btn-primary'%>
          </div>
        <% end %>
        <p><%= link_to I18n.t("button.create_user"), new_user_path %></p>
      </div>
    </div>
  </div>
</div>
